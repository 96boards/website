---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative my-5">
  <DropdownContainer class="group">
    <div class="nav-hover transition">
      <button
        class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-inherit"
      >
        <span>{title}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="3"
          stroke="currentColor"
          class="w-3 h-3 mt-0.5 group-open:rotate-180"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
        </svg>
      </button>
    </div>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-48 z-10 mt-1",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}
      >
        <div
          class="lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col"
        >
          {
            children.map((item: any) => (
              <a
                href={item.url}
                class=" px-3 py-1  lg:hover:text-white hover:bg-accent"
              >
                {item.label}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
